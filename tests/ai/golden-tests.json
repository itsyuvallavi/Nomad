{
  "testSuites": {
    "basic": {
      "description": "Basic single-destination trips",
      "tests": [
        {
          "id": "london_3_days",
          "input": "I want to visit London for 3 days, flying from New York",
          "expected": {
            "destinations": ["London"],
            "totalDays": 3,
            "minActivities": 9,
            "origin": "New York",
            "mustInclude": ["Big Ben", "British Museum", "Westminster"]
          }
        },
        {
          "id": "paris_weekend",
          "input": "Weekend trip to Paris from Los Angeles",
          "expected": {
            "destinations": ["Paris"],
            "totalDays": 2,
            "minActivities": 6,
            "origin": "Los Angeles",
            "mustInclude": ["Eiffel Tower", "Louvre"]
          }
        },
        {
          "id": "tokyo_5_days",
          "input": "Planning a 5-day trip to Tokyo from San Francisco",
          "expected": {
            "destinations": ["Tokyo"],
            "totalDays": 5,
            "minActivities": 15,
            "origin": "San Francisco",
            "mustInclude": ["Shibuya", "Senso-ji", "Tsukiji"]
          }
        }
      ]
    },
    "multi_city": {
      "description": "Multi-destination trips",
      "tests": [
        {
          "id": "europe_tour",
          "input": "2 week trip from Boston to London (4 days), Paris (4 days), Rome (3 days), and Barcelona (3 days)",
          "expected": {
            "destinations": ["London", "Paris", "Rome", "Barcelona"],
            "totalDays": 14,
            "minActivities": 42,
            "origin": "Boston"
          }
        },
        {
          "id": "asia_adventure",
          "input": "Starting from Seattle, spend 3 days in Tokyo, 2 days in Kyoto, and 3 days in Bangkok",
          "expected": {
            "destinations": ["Tokyo", "Kyoto", "Bangkok"],
            "totalDays": 8,
            "minActivities": 24,
            "origin": "Seattle"
          }
        }
      ]
    },
    "edge_cases": {
      "description": "Edge cases and error handling",
      "tests": [
        {
          "id": "vague_dates",
          "input": "I want to go to Rome sometime next month for a few days",
          "expected": {
            "destinations": ["Rome"],
            "totalDays": 3,
            "minActivities": 9,
            "allowFlexible": true
          }
        },
        {
          "id": "no_origin",
          "input": "5 day trip to London",
          "expected": {
            "destinations": ["London"],
            "totalDays": 5,
            "minActivities": 15,
            "originOptional": true
          }
        },
        {
          "id": "business_trip",
          "input": "Business trip to New York for 3 days with meetings during the day",
          "expected": {
            "destinations": ["New York"],
            "totalDays": 3,
            "minActivities": 9,
            "mustInclude": ["evening", "dinner"]
          }
        },
        {
          "id": "long_trip",
          "input": "Month-long trip across Europe starting from Miami",
          "expected": {
            "totalDays": 30,
            "minActivities": 90,
            "origin": "Miami"
          }
        }
      ]
    },
    "validation": {
      "description": "Input validation tests",
      "tests": [
        {
          "id": "too_many_cities",
          "input": "Visit London, Paris, Rome, Barcelona, Amsterdam, and Berlin in 2 weeks",
          "shouldFail": true,
          "expectedError": "Maximum 5 destinations"
        },
        {
          "id": "too_long",
          "input": "Planning a 45-day trip around the world",
          "shouldFail": true,
          "expectedError": "Maximum 30 days"
        },
        {
          "id": "invalid_city",
          "input": "Trip to Atlantis for 3 days",
          "expected": {
            "shouldHandle": true,
            "fallbackBehavior": "suggest alternatives"
          }
        }
      ]
    }
  },
  "performance": {
    "maxResponseTime": 30000,
    "targetResponseTime": 10000,
    "maxRetries": 2
  },
  "validation": {
    "requiredFields": ["destination", "title", "itinerary", "quickTips"],
    "itineraryValidation": {
      "minActivitiesPerDay": 3,
      "maxActivitiesPerDay": 8,
      "requiredActivityFields": ["time", "description", "category"]
    }
  }
}